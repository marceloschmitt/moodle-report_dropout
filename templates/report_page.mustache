<!-- {{! This style corrects bug when googlecharts is used withBootstrap. }} -->
<style>
   .tab-content>.tab-pane {
     height: 1px;
     overflow: hidden;
     display: block;
    visibility: hidden;
   }
   .tab-content>.active {
     height: auto;
     overflow: auto;
     visibility: visible;
   }
</style>

<div class="card mb-2 info-course" >
    <div class="card-header">
        <h5 class="font-weight-bold">{{programinformation}}</h5>
    </div>
    <div class="card-body container row">
        <div class="card-text" >
            <p class="mb-0"> {{studentname}}: {{studentfullname}}</p>
            <p class="mb-0"> {{program}}: <span class="badge badge-info">{{notready}}</span></p>
            <p class="mb-0"> {{class}}: <span class="badge badge-info">{{notready}}</span></p>
            <p class="mb-0"> {{numberofterms}}: <span class="badge badge-info">{{notready}}</span></p>
        </div>
    </div>
</div>

<div class="card mb-2 info-student">
    <div class="card-header">
        <h5 class="font-weight-bold">{{studentinformation}}</h5>
    </div>
    <div class="card-body container row">
        <div class="card-text" >
            <p class="mb-0"> {{situation}}: <span class="badge badge-info">{{notready}}</span></p>
            <p class="mb-0"> {{passedterms}}: <span class="badge badge-info">{{notready}}</span></p>
            <p class="mb-0"> {{triedcourses}}: <span class="badge badge-info">{{notready}}</span></p>
            <p class="mb-0"> {{mandatorycourses}} (oferta/matricula): <span class="badge badge-info">{{notready}}
            </span></p>
            <p class="mb-0"> {{nonmandatorycourses}} (oferta/matricula): <span class="badge badge-info">{{notready}}
            </span></p>
            <p class="mb-0"> {{schedule}}: <span class="badge badge-info">{{notready}}</span></p>
        </div>
    </div>
</div>
<br><br>
