<style>
    .custom-table tbody:nth-child(even) {
        background-color: #f1f1f1; /* Background color for odd rows */
    }
</style>
<!-- {{! moodle usa bootstrap 4.6 }} -->

<div class="card mb-2 info-course" >
    <div class="card-header">
        <h5 class="font-weight-bold">{{programinformation}}</h5>
    </div>
    <div class="card-body container row">
        <div class="card-text" >
            <p class="mb-0"> {{studentname}}: {{studentfullname}}</p>
            <p class="mb-0"> {{program}}: <span class="badge badge-info">{{notready}}</span></p>
            <p class="mb-0"> {{class}}: <span class="badge badge-info">{{notready}}</span></p>
            <p class="mb-0"> {{numberofterms}}: <span class="badge badge-info">{{notready}}</span></p>
        </div>
    </div>
</div>

<div class="card mb-2 info-student">
    <div class="card-header">
        <h5 class="font-weight-bold">{{studentinformation}}</h5>
    </div>
    <div class="card-body container row">
        <div class="card-text" >
            <p class="mb-0"> {{situation}}: <span class="badge badge-info">{{notready}}</span></p>
            <p class="mb-0"> {{passedterms}}: <span class="badge badge-info">{{notready}}</span></p>
            <p class="mb-0"> {{triedcourses}}: <span class="badge badge-info">{{notready}}</span></p>
            <p class="mb-0"> {{mandatorycourses}} (oferta/matricula): <span class="badge badge-info">{{notready}}
            </span></p>
            <p class="mb-0"> {{nonmandatorycourses}} (oferta/matricula): <span class="badge badge-info">{{notready}}
            </span></p>
            <p class="mb-0"> {{schedule}}: <span class="badge badge-info">{{notready}}</span></p>
        </div>
    </div>
</div>
<br><br>
{{{script}}}
<button onclick="button_table_charts()"><H3>Tabelas com evolução de indicadores de risco</h3></button>
<br>
<div id="table_charts" width="max-content" style="display: block">
    <BR><BR>
    <div id="behaviour_table" width="max-content" style="display: block"></div><BR>
    <div id="social_table" width="max-content" style="display: block"></div><BR>
    <div id="cognitive_table" width="max-content" style="display: block"></div><BR>
</div>
<BR><BR>
<button onclick="button_line_charts()"><H3>Gráficos de linha com evolução de indicadores de risco</h3></button>
<div id="line_charts" width="max-content" style="display: block">
    <div id="line_chart_behaviour" width="max-content"></div>
    <div id="line_chart_behaviour" width="max-content"></div><BR>
    <div id="line_chart_social" width="max-content"></div><BR>
    <div id="line_chart_cognitive" width="max-content"></div><BR>
</div>
<BR><BR>
<button onclick="button_column_charts()"><H3> Gráficos de coluna com evolução de indicadores de risco</h3></button>
<div id="column_charts" width="max-content" style="display: block">
    <div id="column_chart_behaviour" width="max-content"></div><BR>
    <div id="column_chart_social" width="max-content"></div><BR>
    <div id="column_chart_cognitive" width="max-content"></div><BR>
</div>
