<!-- {{! This style corrects bug when googlecharts is used withBootstrap. }} -->
<style>
   .tab-content>.tab-pane {
     height: 1px;
     overflow: hidden;
     display: block;
    visibility: hidden;
   }
   .tab-content>.active {
     height: auto;
     overflow: auto;
     visibility: visible;
   }
</style>

<div class="alert alert-{{riskclass}}" role="alert">
    {{risk}}
</div>

<br>
<div class="card mb-2 info-course" >
    <div class="card-header">
        <h5 class="font-weight-bold">{{programinformation}}</h5>
    </div>
    <div class="card-body container row">
        <div class="card-text" >
            <p class="mb-0"> {{studentname}}: {{studentfullname}}</p>
            <p class="mb-0"> {{program}}: {{programname}}</p>
            <p class="mb-0"> {{class}}: {{classname}}</p>
            <p class="mb-0"> {{terms}}: {{numberofterms}}</p>
        </div>
    </div>
</div>

<div class="card mb-2 info-student">
    <div class="card-header">
        <h5 class="font-weight-bold">{{studentinformation}}</h5>
    </div>
    <div class="card-body container row">
        <div class="card-text" >
            <p class="mb-0"> {{situation}}: Ativo</p>
            <p class="mb-0"> {{passedterms}}: 3</p>
            <p class="mb-0"> {{triedcourses}}: 10</p>
            <p class="mb-0"> {{mandatorycourses}} (oferta/matricula):  4/6 </p>
            <p class="mb-0"> {{nonmandatorycourses}} (oferta/matricula): 0/0 </p>
            <p class="mb-0"> {{schedule}}: 75% </p>
        </div>
    </div>
</div>

{{{script}}}

<div class="card mb-2 info-graphics" >
    <div class="card-header">
        <h5 class="font-weight-bold">{{graphs}}</h5>
    </div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <ul class="nav">
            <li class="active nav-link"><a data-toggle="pill" href="#home">Tabela</a></li>
            <li class="nav-link"><a data-toggle="pill" href="#menu1">Gráfico de linhas</a></li>
            <li class="nav-link"><a data-toggle="pill" href="#menu2">Gráfico de barras</a></li>
        </ul>
    </nav>
    <div class="tab-content">
        <div id="home" class="tab-pane fade in active" width="max-content">
            <div id="behaviour_table"></div><BR>
            <div id="social_table"></div><BR>
            <div id="cognitive_table"></div><BR>
        </div>
        <div id="menu1" class="tab-pane fade" width="max-content">
            <div id="line_chart_behaviour"></div>
            <div id="line_chart_behaviour4"></div><BR>
            <div id="line_chart_social"></div><BR>
            <div id="line_chart_cognitive"></div><BR>
        </div>
        <div id="menu2" class="tab-pane fade">
            <div id="column_chart_behaviour" width="max-content"></div><BR>
            <div id="column_chart_behaviour4" width="max-content"></div><BR>
            <div id="column_chart_social" width="max-content"></div><BR>
            <div id="column_chart_cognitive" width="max-content"></div><BR>
        </div>
    </div>
</div>